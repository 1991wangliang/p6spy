<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

  <changeSet id="1" author="quintonm">
    <!-- used by DataSourceTest -->
    <createTable tableName="testtable">
      <column name="col1" type="int"/>
    </createTable>
  </changeSet>

  <changeSet id="2" author="quintonm">
    <!-- used by P6TestBasics -->
    <createTable tableName="basic_test">
      <column name="col1" type="varchar(255)"/>
      <column name="col2" type="int"/>
    </createTable>
  </changeSet>

  <changeSet id="3" author="quintonm">
    <!-- used by P6TestCallableStatement -->
    <createTable tableName="test">
      <column name="id" type="int"/>
      <column name="name" type="varchar(255)"/>
    </createTable>
  </changeSet>

  <changeSet id="4" author="quintonm">
    <!-- used by P6TestCommon -->
    <createTable tableName="common_test">
      <column name="col1" type="varchar(255)"/>
      <column name="col2" type="int"/>
    </createTable>
  </changeSet>

  <changeSet id="5" author="quintonm">
    <!-- used by P6TestDriverMulti -->
    <createTable tableName="multidriver_test2">
      <column name="col1" type="varchar(255)"/>
      <column name="col2" type="int"/>
    </createTable>
  </changeSet>

  <changeSet id="6" author="quintonm">
    <!-- used by P6TestPreparedStatement -->
    <createTable tableName="prepstmt_test">
      <column name="col1" type="varchar(255)"/>
      <column name="col2" type="int"/>
    </createTable>
  </changeSet>

  <changeSet id="7" author="quintonm">
    <!-- used by P6TestPreparedStatement -->
    <createTable tableName="stmt_test">
      <column name="col1" type="varchar(255)"/>
      <column name="col2" type="int"/>
    </createTable>
  </changeSet>

  <changeSet id="8" author="quintonm">
    <!-- generic table to be used by all tests -->
    <createTable tableName="customers">
      <column name="id" type="int"/>
      <column name="name" type="varchar(255)"/>
    </createTable>
    <loadData tableName="customers" file="testdata/customers.csv">
      <column name="id" type="numeric"/>
      <column name="name" type="string"/>
    </loadData>
  </changeSet>

  <changeSet id="9" author="quintonm">
    <!-- generic table to be used by all tests -->
    <createTable tableName="contacts">
      <column name="id" type="int"/>
      <column name="name" type="varchar(255)"/>
    </createTable>
    <loadData tableName="contacts" file="testdata/contacts.csv">
      <column name="id" type="numeric"/>
      <column name="name" type="string"/>
    </loadData>
  </changeSet>

  <changeSet id="10" author="quintonm">
    <!-- used by P6TestCallableStatement -->
    <preConditions onFail="CONTINUE">
      <dbms type="H2"/>
    </preConditions>
    <createProcedure>
      CREATE ALIAS TEST_PROC AS $$ 
      int testProc(int param1, String param2) {
         return 2;
      } $$;      
    </createProcedure>
  </changeSet>
  
  <changeSet id="11" author="quintonm">
    <!-- used by P6TestOutage -->
    <preConditions onFail="CONTINUE">
      <dbms type="H2"/>
    </preConditions>
    <createProcedure>
      CREATE ALIAS SLEEP AS $$ 
      void sleep(long miliseconds) {
         try { 
               java.lang.Thread.sleep(miliseconds); 
         } catch (java.lang.InterruptedException e) {} 
      } $$;      
    </createProcedure>
  </changeSet>

</databaseChangeLog>